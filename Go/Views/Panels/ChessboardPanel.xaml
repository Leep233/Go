<UserControl x:Class="Go.Views.Panels.ChessboardPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Go.Views.Panels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="600">
    <UserControl.Background>
        <ImageBrush ImageSource="/Resources/chessboard_bg.jpg"></ImageBrush>
    </UserControl.Background>

    <Border>
        <Grid x:Name="chessboardGrid" VerticalAlignment="Center" HorizontalAlignment="Center"></Grid>
    </Border>    

</UserControl>
